<h1>{{#if provider}}Update{{else}}Add{{/if}} Provider</h1>
<form action="/addProvider" , method="POST">
  <p>
    Name <input type="text" name="name" value="{{ provider.name }}" /><br />
    Specialty <input type="text" name="specialty" value="{{ provider.specialty }}" /><br />
    email <input type="email" name="phone" value="{{ provider.email }}" /><br />
    Password <input type="password" name="password" value="{{provider.password}}" /><br />
    Phone <input type="tel" name="phone" value="{{ provider.phone }}" /><br />
    Address <input type="text" name="address" value="{{ provider.address}}" /><br />

    <input type="hidden" name="id" value="{{ provider._id }}" /> <br />
    <button type="submit">{{#if provider}}Update{{else}}Add{{/if}} Provider</button>
  </p>
</form>